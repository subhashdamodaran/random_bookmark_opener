{
  "manifest_version": 3,
  "name": "Random Bookmark Opener",
  "description": "Open a random bookmark on browser startup",
  "version": "1.0",
  "permissions": ["storage"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
